{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2016",

    /* Modules */
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,

    /* Type Checking */
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["src"], 
  "exclude": ["dist", "node_modules"]
}
